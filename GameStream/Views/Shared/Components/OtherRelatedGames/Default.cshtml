@model GameStream.Models.DetailPageDetailsViewModel

<div class="other-games">
    <div class="row">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em>Other Related</em> Games</h4>
            </div>
        </div>
        @foreach (var x in Model.DetailsPageGameDetails)
        {
            <div class="col-lg-6">
                <div class="item">
                    <img src="@x.Logo" alt="" style="width: 50px; height: 50px; object-fit: cover; border-radius: 23px; margin-bottom: 30px;" class="templatemo-item">
                    <h4>@x.GameName</h4><span>@x.Platform</span>
                    <ul>
                        <li><i class="fa fa-star"></i>@x.Rate</li>
                        <li><i class="fa fa-download"></i>@x.DownloadQuantity</li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
