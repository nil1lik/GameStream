@model GameStream.Models.DetailPageDetailsViewModel

<!-- ***** Most Popular Start ***** -->
<div class="most-popular">
    <div class="row">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em>Most Popular</em> Right Now</h4>
            </div>
            <div class="row">
                @foreach (var x in Model.DetailsPageGameDetails)
                {
                    <div class="col-lg-3 col-sm-6">
                        <div class="item">
                            <img src="@x.Logo" alt="" style="height: 200px; width: 200px; object-fit: fill; display: block; margin:auto;">
                            <h4>@x.GameName<br><span>@x.Platform</span></h4>
                            <ul>
                                <li><i class="fa fa-star"></i> @x.Rate</li>
                                <li><i class="fa fa-download"></i> @x.DownloadQuantity</li>
                            </ul>
                        </div>
                    </div>
                }
                <div class="col-lg-12">
                    <div class="main-button">
                        <a href="browse.html">Discover Popular</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Most Popular End ***** -->
